---
import BlurImageHeader from "@components/composite/header/BlurImageHeader.astro";
import Base from "@layouts/base/index.astro";

interface Props {
  name: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
}
const { name, imgSrc, imgAlt } = Astro.props;
---

<Base>
  <BlurImageHeader imgAlt={imgAlt} imgSrc={imgSrc}>
    {name}
  </BlurImageHeader>
  <slot />
</Base>

<style>
  .img-triming {
    position: relative;
    width: 100%;
    min-width: 100%;
    overflow-y: hidden;
    height: 12rem;
    max-height: 12rem;
  }

  .header-img {
    width: 100%;
    min-width: 100%;
    height: auto;
  }

  .heading-text {
    backdrop-filter: blur(2px);
    width: 100%;
    position: absolute;
    bottom: 0;
  }
</style>
