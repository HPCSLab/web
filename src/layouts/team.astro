---
import BlurImgHeader from "../components/common/blur-img-header.astro";
import Base from "./base.astro";

interface Props {
  name: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
}
const { name, imgSrc, imgAlt } = Astro.props;
---

<Base>
  <BlurImgHeader imgAlt={imgAlt} imgSrc={imgSrc}>
    {name}
  </BlurImgHeader>
  <slot />
</Base>

<style>
  h1 {
    font-size: var(--font-size-3xl);
    margin: 2rem;
  }

  .img-triming {
    position: relative;
    width: 100%;
    min-width: 100%;
    overflow-y: hidden;
    height: 12rem;
    max-height: 12rem;
  }

  .header-img {
    width: 100%;
    min-width: 100%;
    height: auto;
  }

  .heading-text {
    backdrop-filter: blur(2px);
    width: 100%;
    position: absolute;
    bottom: 0;
  }
</style>
