---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a class="root" href={href}>
  <div>
    <slot />
  </div>
  <div class="underline-wrapper">
    <div class="underline"></div>
  </div>
</a>

<style>
  .root {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .underline-wrapper {
    width: 100%;
    height: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .root:hover .underline {
    width: 100%;
    border-radius: 0.75px;
    height: 1.5px;
  }

  .underline {
    width: 90%;
    height: 1px;
    border-radius: 0.5px;
    margin-top: 0.2em;
    background-color: var(--color-primary);
    transition:
      width 0.1s ease,
      height 0.1s ease,
      border-radius 0.1s ease;
  }

  .root:hover {
  }
</style>
