---
import { Image } from "astro:assets";
import Badge from "@components/display/Badge.astro";
import { getEntry } from "astro:content";
import { memberRoleName, type Member } from "@content";
import Typography from "@components/display/Typography.astro";

interface Props {
  member: Member;
}
const { member } = Astro.props;
---

<section>
  <div class="top-wrapper">
    <div class="icon-wrapper">
      <Image
        src={member.icon}
        alt={member.name ? member.name : member.eng_name}
      />
    </div>
    <div class="top-text">
      <h3>
        <div class="name">{member.name}</div>
        <div class="role">{memberRoleName(member)}</div>
      </h3>
      {
        member.keywords ? (
          <ul class="keywords-container">
            {member.keywords.map((keyword) => (
              <li class="keyword">
                <Badge>{keyword}</Badge>
              </li>
            ))}
          </ul>
        ) : null
      }
    </div>
  </div>

  <div class="description">
    <Typography>{member.message}</Typography>
  </div>

  <style>
    .description {
      padding-top: 1rem;
    }
    .texts-wrapper {
      margin-left: 2rem;
    }

    .keywords-container {
      display: flex;
      flex-direction: row;
      margin-top: 1rem;
      flex-wrap: wrap;
    }

    .keyword {
      margin-right: 0.5rem;
      margin-top: 0.25em;
      margin-bottom: 0.25em;
    }

    section {
      color: var(--color-text-normal);
      background-color: var(--color-bg-white);
      padding: 2rem;
      border-radius: 0.3rem;
      height: 100%;
    }

    .top-wrapper {
      display: flex;
      flex-direction: row;
    }

    .top-text {
    }

    h3 {
      margin-bottom: 0.5rem;
      font-weight: bolder;
    }

    .name {
      font-size: var(--font-size-xl);
      color: var(--color-text-strong);
    }

    .role {
      color: var(--color-text-weak);
    }

    .icon-wrapper {
      height: 3rem;
      width: 3rem;
      min-height: 3rem;
      min-width: 3rem;
      overflow-x: hidden;
      overflow-y: hidden;
      border-radius: 50%;
      margin-right: 1rem;
    }
  </style>
</section>
