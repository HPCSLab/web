---
import { Image } from "astro:assets";
import Badge from "@components/display/Badge.astro";
import type { TeamMember } from "@content";
import { getCollection, getEntry } from "astro:content";

interface Props {
  member: TeamMember;
}

const { member } = Astro.props;
const {
  data: { icon },
} = await getEntry(member.profile.collection, member.profile.id);
---

<section>
  <div class="top-wrapper">
    <div class="icon-wrapper">
      <Image src={icon} alt={member.name} />
    </div>
    <div class="top-text">
      <h3>
        <span class="name">{member.name}</span>
        <span class="role">{member.role}</span>
      </h3>
      {
        member.keywords ? (
          <ul class="keywords-container">
            {member.keywords.map((keyword) => (
              <li class="keyword">
                <Badge>{keyword}</Badge>
              </li>
            ))}
          </ul>
        ) : null
      }
    </div>
  </div>

  <div class="description">
    <slot />
  </div>

  <style>
    .texts-wrapper {
      margin-left: 2rem;
    }

    .keywords-container {
      display: flex;
      flex-direction: row;
      margin-top: 1rem;
      flex-wrap: wrap;
    }

    .keyword {
      margin-right: 0.5rem;
      margin-top: 0.25em;
      margin-bottom: 0.25em;
    }

    section {
      color: var(--color-text-normal);
      background-color: var(--color-bg-white);
      padding-top: 2rem;
      padding-left: 2rem;
      padding-right: 2rem;
      padding-bottom: 1rem;
      border-radius: 0.3rem;
      height: 100%;
    }

    .top-wrapper {
      display: flex;
      flex-direction: row;
    }

    .top-text {
    }

    h3 {
      margin-bottom: 0.5rem;
      font-weight: bolder;
    }

    .name {
      font-size: var(--font-size-xl);
      color: var(--color-text-strong);
    }

    .role {
      color: var(--color-text-disable);
    }

    .icon-wrapper {
      height: 4rem;
      width: 4rem;
      min-height: 4rem;
      min-width: 4rem;
      overflow-x: hidden;
      overflow-y: hidden;
      border-radius: 50%;
      margin-right: 2rem;
    }
  </style>
</section>
