---
import { Image } from "astro:assets";
import Icons from "../../resource/img/icons";
import { unwrap } from "../../lib/util";
import Badge from "../atom/badge.astro";

interface Props {
  name: string;
  role: string;
  icon: string;
  keywords?: string[];
}
---

<section>
  <div class="top-wrapper">
    <div class="icon-wrapper">
      <Image src={unwrap(Icons.get(Astro.props.icon))} alt={Astro.props.name} />
    </div>
    <div class="top-text">
      <h3>
        <div class="name">{Astro.props.name}</div>
        <div class="role">{Astro.props.role}</div>
      </h3>
      {
        Astro.props.keywords ? (
          <ul class="keywords-container">
            {Astro.props.keywords.map((keyword) => (
              <li class="keyword">
                <Badge>{keyword}</Badge>
              </li>
            ))}
          </ul>
        ) : null
      }
    </div>
  </div>

  <div class="description">
    <slot />
  </div>

  <style>
    .description {
      padding-top: 1rem;
    }
    .texts-wrapper {
      margin-left: 2rem;
    }

    .keywords-container {
      display: flex;
      flex-direction: row;
      margin-top: 1rem;
      flex-wrap: wrap;
    }

    .keyword {
      margin-right: 0.5rem;
      margin-top: 0.25em;
      margin-bottom: 0.25em;
    }

    section {
      color: var(--color-text-normal);
      background-color: var(--color-bg-white);
      padding: 2rem;
      border-radius: 0.5rem;
      height: 100%;
    }

    .top-wrapper {
      display: flex;
      flex-direction: row;
    }

    .top-text {
    }

    h3 {
      margin-bottom: 0.5rem;
      font-weight: bolder;
    }

    .name {
      font-size: var(--font-size-xl);
      color: var(--color-text-strong);
    }

    .role {
      color: var(--color-text-disable);
    }

    .icon-wrapper {
      height: 3rem;
      width: 3rem;
      min-height: 3rem;
      min-width: 3rem;
      overflow-x: hidden;
      overflow-y: hidden;
      border-radius: 50%;
      margin-right: 1rem;
    }
  </style>
</section>
