---
import ResponsiveWidth from "@components/layout/ResponsiveWidth.astro";
import ReadMoreLink from "@components/atom/link/ReadMoreLink.astro";
import Box from "@components/layout/box/Box.astro";
interface Props {
  headingText: string;
  headingUrl?: string;
  backgroundInverted?: boolean;
  fullW?: boolean;
}

const { headingText, headingUrl, backgroundInverted, fullW } = Astro.props;
---

<section class={backgroundInverted ? "bg-inverted" : null}>
  <div>
    <h2>
      <ResponsiveWidth>
        {
          headingUrl ? (
            <ReadMoreLink href={headingUrl}>{headingText}</ReadMoreLink>
          ) : (
            headingText
          )
        }
      </ResponsiveWidth>
    </h2>
  </div>
  {
    fullW ? (
      <Box mode="h" p="2rem">
        <slot />
      </Box>
    ) : (
      <ResponsiveWidth>
        <slot />
      </ResponsiveWidth>
    )
  }
</section>

<style>
  .bg-inverted {
    background-color: var(--color-bg-dark);
    color: var(--color-inverted-text-normal);
  }

  .bg-inverted h2 {
    color: var(--color-inverted-text-strong);
  }

  .full-width {
    padding-left: 2rem;
    padding-right: 2rem;
  }

  section {
    padding-top: 1rem;
    padding-bottom: 2rem;
    margin-top: 1rem;
    margin-bottom: 2rem;
    width: 100%;
  }

  section h2 {
    font-size: var(--font-size-xl);
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    font-weight: bolder;
  }
</style>
