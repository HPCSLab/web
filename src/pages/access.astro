---
import NoImgHeader from "../components/common/no-img-header.astro";
import HSpace from "../components/layout/h-space.astro";
import TopLevelSection from "../components/layout/top-level-section.astro";
import ChevronListItem from "../components/list/chevron-list-item.astro";
import List from "../components/list/list.astro";
import Base from "../layouts/base.astro";
---

<Base title="access">
  <NoImgHeader>Access</NoImgHeader>
  <TopLevelSection headingText="Address" backgroundInverted={false}>
    <address>
      <div class="address">
        <div>
          HPCS Lab. University of Tsukuba 1-1-1 Tennodai, Tsukuba, 305-8573
        </div>
        <div>Ibaraki, Japan</div>
      </div>
      <HSpace />
      <div class="address">
        <div>
          305-8573 茨城県 つくば市 天王台 1-1-1 筑波大学 システム情報工学研究科
        </div>
        <div>HPCS研究室</div>
      </div>
      <HSpace />
      <List ordered={false}>
        <ChevronListItem>総合研究棟B 928 (9F)</ChevronListItem>
        <ChevronListItem>総合研究棟B 1122 (11F)</ChevronListItem>
        <ChevronListItem>総合研究棟B 1124 (11F)</ChevronListItem>
      </List>
    </address>
  </TopLevelSection>
  <TopLevelSection headingText="Phone" backgroundInverted={false}>
    <section class="phone-numbers">
      <h3 class="phone-place">総合研究棟B 1122 (11F)</h3>
      <div class="phone-table">
        <div class="phone-title">Telephone</div>
        <div class="phone-number">+81.29.853.6912 (Ext. 6912)</div>
        <div class="phone-title">Fax</div>
        <div class="phone-number">+81.29.853.6912 (Ext. 6912)</div>
        <div class="phone-title">電話</div>
        <div class="phone-number">029-853-6912 (内線:6912)</div>
        <div class="phone-title">Fax</div>
        <div class="phone-number">029-853-6912 (内線:6912)</div>
      </div>
    </section>
    <section class="phone-numbers">
      <h3 class="phone-place">総合研究棟B 1124 (11F)</h3>
      <div class="phone-table">
        <div class="phone-title">Telephone</div>
        <div class="phoone-number">(Ext. 3655)</div>
        <div class="phone-title">電話</div>
        <div class="phone-number">(内線:3655)</div>
      </div>
    </section>
  </TopLevelSection>
</Base>

<style>
  .address {
  }
  .phone-numbers {
    margin-top: 1rem;
    margin-bottom: 2rem;
  }
  .phone-place {
    font-weight: bold;
    margin-bottom: 1rem;
  }
  .phone-table {
    display: grid;
    grid-template-columns: 6rem 1fr;
    row-gap: 1rem;
  }
</style>
